version: 0.2

phases:
  pre_build:
    commands:
      - aws s3 rm s3://dem.tools-test-bucket --recursive
  build:
    commands:
      - mkdir build-output
      - find . -type d -name public -exec cp -R {} build-output \;
      - find . -mindepth 1 -name build-output -prune -o -exec rm -rf {} +
  post_build:
    commands:
      - mv build-output/**/* ./
      - mv build-output/* ./
      - rm -R build-output
artifacts:
  files:
    - '**/*'
  name: $(AWS_REGION)-$(date +%Y-%m-%d) 
